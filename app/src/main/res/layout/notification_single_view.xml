<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/logoNotifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notif_information"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginVertical="26.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/judulNotifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Judul notifikasi"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/waktuNotifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:00"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"/>



        </LinearLayout>

        <TextView
            android:id="@+id/keteranganNotifikasi"
            android:textColor="@color/text_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Subtitle bisa diisi maksimum dua baris karena kalau kepanjangan juga percuma! "/>









    </LinearLayout>








</LinearLayout>