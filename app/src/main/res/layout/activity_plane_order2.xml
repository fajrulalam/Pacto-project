<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaneOrderActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:paddingHorizontal="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/kotaAsal"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="ASAL"/>

                <ImageView
                    android:id="@+id/panah"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_toRightOf="@+id/kotaAsal"
                    android:baselineAlignBottom="true"
                    android:layout_alignBaseline="@+id/kotaAsal"
                    android:src="@drawable/ic_right_arrow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kotaTujuan"
                    android:textSize="16dp"
                    android:padding="5dp"

                    android:fontFamily="@font/roboto_regular"
                    android:text="TUJUAN"
                    android:layout_toRightOf="@+id/panah"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Penumpang, Ekonomi"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/roboto_light"
                android:textSize="12sp"/>
        </LinearLayout>

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_height="35dp"
            style="@style/radioButtonStyle"
            android:text="Ubah"
            android:layout_gravity="center"
            android:background="@drawable/curved__even_less_colorized_bg"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>