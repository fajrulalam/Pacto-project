                            android:background="@drawable/curved__even_less_bg">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/decoration_issuingform"
                                android:layout_gravity="right"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="3dp"
                                android:paddingHorizontal="8dp"
                                android:text="Berangkat"
                                android:background="@drawable/curved__even_less_bg"
                                android:backgroundTint="@color/primary_light2"
                                android:textColor="@color/primary"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="9dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="8dp"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_margin="8dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/logoMaskapai_pulang"
                                    android:layout_width="37dp"
                                    android:layout_height="37dp"
                                    android:layout_marginBottom="10dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_citilink" />

                                <TextView
                                    android:id="@+id/namaMaskapai_pulang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@id/logoMaskapai_pulang"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Citilink"
                                    android:textColor="#4C4C4C" />

                                <TextView
                                    android:id="@+id/kodePenerbangan_pulang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/namaMaskapai_pulang"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@id/logoMaskapai_pulang"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="IQK290"
                                    android:textSize="12dp" />

                                <View
                                    android:id="@+id/imageView7_pulang"
                                    android:layout_width="1dp"
                                    android:layout_height="53dp"
                                    android:layout_below="@id/titikBerangkat_pulang"
                                    android:layout_marginLeft="11.5dp"
                                    android:background="@drawable/vertical_dashed_line"
                                    android:layerType="software"/>


                                <ImageView
                                    android:id="@+id/titikBerangkat_pulang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/logoMaskapai_pulang"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginTop="2.5dp"
                                    android:layout_marginRight="6dp"
                                    android:src="@drawable/ic_titik_berangkat" />
                                <TextView
                                    android:id="@+id/bandaraTerminalBerangkat_pulang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/titikBerangkat_pulang"
                                    android:text="Nama Bandara Terminal X"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_grey"
                                    android:layout_below="@id/logoMaskapai_pulang"/>

                                <TextView
                                    android:id="@+id/tanggalWaktuBerangkat_pulang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/bandaraTerminalBerangkat_pulang"
                                    android:layout_marginTop="3dp"
                                    android:layout_toRightOf="@id/titikBerangkat_pulang"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Nama Bandara Terminal X"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/durasi_jmlTransit_transits_pulang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tanggalWaktuBerangkat_pulang"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:layout_toRightOf="@id/titikBerangkat_pulang"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="durasi total - jml transit, transits"
                                    android:textColor="@color/text_grey"
                                    android:textSize="9sp" />


                                <TextView
                                    android:id="@+id/bandaraTerminalDatang_pulang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/titikBerangkat_pulang"
                                    android:text="Nama Bandara Terminal X"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_grey"
                                    android:layout_below="@id/durasi_jmlTransit_transits_pulang"/>

                                <TextView
                                    android:id="@+id/tanggalWaktuDatang_pulang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/bandaraTerminalDatang_pulang"
                                    android:layout_marginTop="3dp"
                                    android:layout_toRightOf="@id/titikBerangkat_pulang"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="Nama Bandara Terminal X"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="13sp" />

                                <ImageView
                                    android:id="@+id/titikDatang_pulang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/logoMaskapai_pulang"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginTop="67dp"
                                    android:layout_marginRight="6dp"
                                    android:src="@drawable/ic_titik_datang" />


                            </RelativeLayout>



                        </FrameLayout>
                    </LinearLayout>


                </HorizontalScrollView>











                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Penumpang dan Fasilitas"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/dark_grey"
                    android:layout_marginBottom="1dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved__even_less_bg"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="5dp">



                    <TextView
                        android:layout_marginLeft="14dp"
                        android:id="@+id/penumpangKosong"
                        android:layout_width="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Penumpang"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/NamaPenumpangRecycleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginBottom="0dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <ImageView
                        android:id="@+id/editPassengerNamesButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingHorizontal="14dp"
                        android:visibility="gone"
                        android:paddingVertical="16dp"
                        android:src="@drawable/ic_baseline_edit_24" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
