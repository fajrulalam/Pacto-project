<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/curved_less_bg_outline">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kotaAsal_atau_namaHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KotaAsal/Hotel"
                android:textSize="16dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/kotaTujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KotaTujuan"
                android:textSize="16dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/statusPesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/curved_less_bg_outline"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/roboto_medium"
            android:paddingHorizontal="7dp"
            android:paddingVertical="5dp"
            android:text="ISSUED"
            android:textColor="@color/white" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tglBerangkat_atau_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[TANGGAL Berangkat / ALAMAT]"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/tglCek_in"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[KHUSUS HOTEL: Tanggal check-in - check-out (X malam)]"
        android:textSize="10dp"/>

    <RelativeLayout
        android:id="@+id/logoMaskapaiLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/logoMaskapai"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_citilink" />

        <TextView
            android:id="@+id/namaMaskapai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/logoMaskapai"
            android:fontFamily="@font/roboto_medium"
            android:text="Citilink"
            android:textColor="#4C4C4C" />

        <TextView
            android:id="@+id/kodePenerbangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namaMaskapai"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/logoMaskapai"
            android:fontFamily="@font/roboto_light"
            android:text="IQK290"
            android:textSize="12dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rincianPenumpangLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_useraccount_selected"
            android:layout_gravity="center"
            app:tint="@color/dark_grey" />

        <TextView
            android:id="@+id/rincianPenumpang"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[RINCIAN PENUMPANG]"
            android:fontFamily="@font/roboto_regular"

            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jumlahKamarLayout"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_room"
            android:layout_gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            app:tint="@color/dark_grey" />

        <TextView
            android:id="@+id/jumlahKamar"
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_height="wrap_content"
            android:text="[JUMLAH KAMAR]"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>




</LinearLayout>