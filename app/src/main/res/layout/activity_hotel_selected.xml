<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelSelected_Activity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:elevation="1dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/closeSheet"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleY="1"
            android:scaleX="1.2"
            android:backgroundTint="@color/status_bar"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="0dp">

            <RelativeLayout
                android:id="@+id/fotogallery"
                android:layout_width="match_parent"
                android:background="@color/text_grey"
                android:layout_height="272dp">

                <ImageView
                    android:id="@+id/mainPicture"
                    android:layout_width="match_parent"
                    android:layout_height="202dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotel_fasilitas1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@id/mainPicture"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/picture2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/hotel_fasilitas2"
                        android:layout_weight="0.33"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:id="@+id/picture3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/hotel_fasilitas3"
                        android:layout_weight="0.33"
                        android:scaleType="centerCrop"/>


                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.33" >

                        <ImageView
                            android:id="@+id/picture4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/hotel_fasilitas4"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:id="@+id/jumlahfotolain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#CC434343"
                            android:text="+ 8 lainnya"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/roboto_regular"/>
                    </FrameLayout>

                </LinearLayout>








            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/namaHotel_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="[NAMA HOTEL]"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_star" />
                </LinearLayout>

                <TextView
                    android:id="@+id/alamatTambahan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="[ALAMAT TAMBAHAN]"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Fasilitas"
                    android:textColor="@color/dark_grey"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/fasilitas_restoran"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_restoran" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center"
                            android:text="Restoran"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />


                    <LinearLayout
                        android:id="@+id/fasilitas_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_wifi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center"
                            android:text="Wi-Fi"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />


                    <LinearLayout
                        android:id="@+id/fasilitas_airhangat"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_airhangat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center"
                            android:text="Air Hangat"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />


                    <LinearLayout
                        android:id="@+id/fasilitas_laundry"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:src="@drawable/ic_laundry" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_light"
                            android:gravity="center"
                            android:text="Laundry"
                            android:textSize="14dp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lihatlainnya_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/selectable_view"
                    android:clickable="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/curved__even_less_colorized_bg"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="Lihat lainnya"
                        android:textColor="@color/primary" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Lokasi"
                    android:textColor="@color/dark_grey"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/text_grey">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text="MAP"
                        android:textColor="@color/white" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_address" />

                    <TextView
                        android:id="@+id/alamatlengkap_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/roboto_light"
                        android:text="Jl. Bangka No.8-18, Gubeng, Kec. Gubeng, Kota SBY, Jawa Timur 60281 (031) 5011100"
                        android:textColor="@color/dark_grey"
                        android:textSize="12dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Waktu"
                    android:textColor="@color/dark_grey"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Check-in"
                        android:textColor="@color/dark_grey"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/waktuCekin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="14.00 WIB"
                        android:textColor="@color/dark_grey"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Check-out"
                        android:textColor="@color/dark_grey"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/waktuCekout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="12.00 WIB"
                        android:textColor="@color/dark_grey"
                        android:textSize="12dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Deskripsi"
                    android:textColor="@color/dark_grey"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Minimalist rooms in a trendy budget hotel offering complimentary Wi-Fi and a mall shuttle. \n\nA 10-minute walk from Surabaya Gubeng train station, this trendy budget hotel on a tree-lined street is 2 km from Tunjungan Plaza mall. \n\nSleeping up to 3 people, the functional, minimalist rooms come with complimentary Wi-Fi, flat-screen TVs and safes. Room service is offered. \n \nFreebies include a mall shuttle. Breakfast (fee) is served in a bright lobby dining room."
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginBottom="80dp"
                    android:textSize="12dp"/>


            </LinearLayout>





        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/curved__top_corners_bg"
        android:elevation="10dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mulai dari"
                android:fontFamily="@font/roboto_light"
                android:textSize="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/harga_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/roboto_medium"
                android:text="IDR 550.000"
                android:textColor="@color/black" />


        </LinearLayout>

        <Button
            android:id="@+id/lihatkamar_btn"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:layout_marginVertical="6dp"
            android:backgroundTint="@color/primary_dark"
            android:layout_marginHorizontal="16dp"
            android:text="Lihat kamar"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_regular"/>
    </androidx.appcompat.widget.LinearLayoutCompat>











</FrameLayout>