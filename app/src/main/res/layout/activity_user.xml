<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainConstraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".UserActivity">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleX="1.15"
                    android:scaleY="1.15"
                    android:src="@drawable/ic_home_backdrop"
                    android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="20dp"
                        android:textColor="@color/black"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="21dp"
                        android:src="@drawable/pacto_logo"/>



                </LinearLayout>
            </FrameLayout>






        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/curved_less_bg"
            android:backgroundTint="@color/white"
            android:layout_marginTop="60dp"
            android:paddingHorizontal="16dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:paddingVertical="10dp"
                android:background="@drawable/curved_less_bg_outline">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/namaPerusahaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PT. Saga Construction"
                        android:textSize="16dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_medium"/>

                    <TextView
                        android:id="@+id/emailPerusahaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="picpacto@sagacons.com"/>
                    <TextView
                        android:id="@+id/nomorPerusahaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+6282231518977"
                        android:fontFamily="@font/roboto_regular"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/logo_perusahaan2"
                    android:layout_weight="0.1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ubahPassword"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:foreground="@drawable/selectable_view"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_changepass"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Ubah password"
                    android:textColor="@color/dark_grey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ubahPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/selectable_view"
                android:clickable="true"
                android:paddingVertical="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_changepin"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Ubah PIN"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/dark_grey"
                    android:fontFamily="@font/roboto_regular"/>

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"/>

            <LinearLayout
                android:id="@+id/namaTersimpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:foreground="@drawable/selectable_view"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_round_man" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Nama Tersimpan"
                    android:textColor="@color/dark_grey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tentangKami"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/selectable_view"
                android:clickable="true"
                android:paddingVertical="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/carbon_information"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Tentang Kami"
                    android:textColor="@color/dark_grey" />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"/>


            <LinearLayout
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/selectable_view"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="0.1"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/ic_sharp_log_out" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.9"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Tentang Kami"
                    android:textColor="@color/dark_grey" />

            </LinearLayout>







        </LinearLayout>


    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        app:itemTextAppearanceActive="@style/Widget.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_less_bg"
        android:elevation="10dp"
        android:translationZ="10dp"
        app:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/mainConstraintLayout"
        android:layout_marginTop="-20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_nav"/>


</androidx.constraintlayout.widget.ConstraintLayout>





