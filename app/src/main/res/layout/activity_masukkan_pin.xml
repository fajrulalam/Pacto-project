<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasukkanPIN_Activity">

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/topbar2"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="60dp"
                android:scaleY="1"
                android:scaleX="1"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                android:background="@color/white"
                android:foreground="@drawable/selectable_view_notsocurved"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Form Pemesanan"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/dark_grey"
                android:textSize="18dp"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:src="@drawable/pacto_logo"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="12dp"/>



        </LinearLayout>


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/topBardivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/topbar"
            android:layout_marginBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="14dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/topBardivider">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:paddingVertical="10dp"
            android:text="Masukkan PIN"
            android:textColor="@color/dark_grey"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan PIN akun anda untuk melanjutkan transaksi"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="33dp"
            android:textSize="12dp"/>
        
        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="44dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/curved_bg_less_thickoutline"
            android:layout_gravity="center"
            android:layout_marginBottom="11dp"
            android:orientation="horizontal">



<!--            FILL IN HERE-->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.1"/>
            <EditText
                android:id="@+id/pin1"
                android:background="@null"
                android:hint="—"
                android:textAlignment="center"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"/>
            <EditText
                android:id="@+id/pin2"
                android:layout_width="28dp"
                android:background="@null"
                android:hint="—"
                android:textAlignment="center"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"/>
            <EditText
                android:id="@+id/pin3"
                android:background="@null"
                android:hint="—"
                android:layout_width="28dp"
                android:textAlignment="center"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"/>
            <EditText
                android:id="@+id/pin4"
                android:layout_width="28dp"
                android:background="@null"
                android:hint="—"
                android:textAlignment="center"
                android:layout_height="match_parent"
               />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.1"/>
        </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Memiliki kendala?"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="33dp"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/hubungiAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Hubungi Admin"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="33dp"
                android:textColor="@color/primary"
                android:textSize="12dp"/>


        </androidx.appcompat.widget.LinearLayoutCompat>







    </LinearLayout>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>