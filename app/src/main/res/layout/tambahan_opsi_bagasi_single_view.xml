<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingVertical="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nomorPenumpang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14dp"
            android:text="[NO]. "/>

        <TextView
            android:id="@+id/namaPenumpang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[NAMA LENGKAP PENUMPANG]"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14dp"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="@drawable/selectable_view_notsocurved"
                    android:id="@+id/radioButton1"
                    android:orientation="vertical"
                    android:background="@drawable/curved_less_bg_outline"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/default_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20 kg"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/default_harga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IDR 0"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="@drawable/selectable_view_notsocurved"
                    android:id="@+id/radioButton2"
                    style="@style/radioButtonStyle"
                    android:orientation="vertical"
                    android:background="@drawable/curved_less_bg_outline"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/tambahanKG_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+5 kg"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/hargaTambahan_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IDR 115.000"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="@drawable/selectable_view_notsocurved"
                    android:id="@+id/radioButton3"
                    style="@style/radioButtonStyle"
                    android:orientation="vertical"
                    android:background="@drawable/curved_less_bg_outline"
                    android:padding="10dp"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/tambahanKG_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+10 kg"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/hargaTambahan_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IDR 205.000"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:gravity="center"/>

                </LinearLayout>


            </LinearLayout>




    </LinearLayout>





    </LinearLayout>











