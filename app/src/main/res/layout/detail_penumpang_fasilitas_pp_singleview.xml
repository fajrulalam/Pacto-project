<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="6dp"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/nomor_titel_namaLengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_grey"
        android:textSize="14dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginBottom="3dp"
        android:text="[No.] [Titel] [Nama Lengkap]"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="1.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_marginRight="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp"
            android:background="@drawable/curved_less_bg_outline"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kodeBandaraAsal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CGK"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/dark_grey"
                    android:fontFamily="@font/roboto_medium"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="6dp"/>

                <TextView
                    android:id="@+id/kodeBandaraTujuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AMS"
                    android:textColor="@color/dark_grey"
                    android:fontFamily="@font/roboto_medium"/>

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginVertical="6dp"
                app:dividerColor="#C8C8C8"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_bagasi"
                    android:layout_marginRight="6dp"/>

                <TextView
                    android:id="@+id/bagasiDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20kg"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_grey"/>

                <TextView
                    android:id="@+id/bagasiTambahan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+15kg"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/green_success"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nomorKursi_layout"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_kursi"
                    android:layout_marginRight="6dp"
                    app:tint="@color/dark_grey" />

                <TextView
                    android:id="@+id/nomorKursi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17E"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_grey"/>


            </LinearLayout>








        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp"
            android:background="@drawable/curved_less_bg_outline"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kodeBandaraAsal_pulang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AMS"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/dark_grey"
                    android:fontFamily="@font/roboto_medium"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_right_arrow"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="6dp"/>

                <TextView
                    android:id="@+id/kodeBandaraTujuan_pulang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CGK"
                    android:textColor="@color/dark_grey"
                    android:fontFamily="@font/roboto_medium"/>

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginVertical="6dp"
                app:dividerColor="#C8C8C8"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_bagasi"
                    android:layout_marginRight="6dp"/>

                <TextView
                    android:id="@+id/bagasiDefault_pulang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20kg"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_grey"/>

                <TextView
                    android:id="@+id/bagasiTambahan_pulang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+15kg"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/green_success"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:id="@+id/nomorKursi_layout_pulang"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_kursi"
                    android:layout_marginRight="6dp"
                    app:tint="@color/dark_grey" />

                <TextView
                    android:id="@+id/nomorKursi_pulang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18E"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dark_grey"/>


            </LinearLayout>








        </LinearLayout>



    </LinearLayout>

</LinearLayout>