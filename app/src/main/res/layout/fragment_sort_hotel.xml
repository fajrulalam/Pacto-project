<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:context=".SortHotelFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/closeSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:paddingVertical="10dp"
                android:text="Urutkan"
                android:textSize="20dp" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="120dp">


                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/planeSort1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga tertinggi"
                    android:fontFamily="@font/roboto_light"/>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/planeSort2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga terendah"
                    android:fontFamily="@font/roboto_light"/>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/planeSort3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rekomendasi (Paling banyak dipesan)"
                    android:fontFamily="@font/roboto_light"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/planeSort4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bintang tertinggi"
                    android:fontFamily="@font/roboto_light"/>





            </RadioGroup>




        </LinearLayout>


    </LinearLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/tampilkanButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/curved__top_corners_bg"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="6dp"
            android:backgroundTint="@color/primary_dark"
            android:layout_marginHorizontal="16dp"
            android:text="Tampilkan"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_regular"/>
    </androidx.appcompat.widget.LinearLayoutCompat>













</androidx.constraintlayout.widget.ConstraintLayout>